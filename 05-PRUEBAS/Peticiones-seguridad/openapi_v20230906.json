      "post" : {
        "tags" : [ "Gestor Seguridad Controller" ],
        "description" : "Autentificar usuario",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/PeticionAutenticar"
              }
            }
          }
